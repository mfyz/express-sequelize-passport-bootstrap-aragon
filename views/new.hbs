<div class="row justify-content-md-center">
	<div class="col-md-6">
		<h1>New Post</h1>
		<form method="post">
			<input type="hidden" name="_csrf" value="{{csrfToken}}" />

			{{#if hasError}}
				<div class="alert alert-danger">{{error}}</div>
			{{/if}}

			<div class="form-group">
				<label for="title">Title</label>
				<input id="title" class="form-control" type="text" name="title" value="{{form.title}}" />
			</div>

			<div class="form-group">
				<label for="description">Describe your idea</label>
				<textarea id="description" class="form-control" name="description" rows="5">{{form.description}}</textarea>
			</div>

			<button type="submit" class="btn btn-primary btn-block mt-5">Submit</button>
		</form>
	</div>
</div>